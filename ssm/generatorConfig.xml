<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >

  <!-- 指定连接数据库的驱动包 -->
  <classPathEntry location="D://mysql-connector-java.jar"/>

  <context id="context1" >
  
    <!-- 去除自动生成的注释 -->
    <commentGenerator>
       <property name="suppressAllComments" value="true"/>
    </commentGenerator>
  
    <!-- 建立与某数据库的链接 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/hello" userId="root" password="123456" />
  
    <!-- 设置生成实体类的存放位置 -->
    <javaModelGenerator targetPackage="com.entity" targetProject="ssm" />
   
    <!-- 设置生成映射文件的存放位置 -->
    <sqlMapGenerator targetPackage="com.mapper" targetProject="ssm" />
    
    <!-- 设置生成的持久层操作文件的存放位置 -->
    <javaClientGenerator targetPackage="com.dao" targetProject="ssm" type="XMLMAPPER" />
    
    <!-- 设置数据库表的信息 -->
    <table schema="hello" tableName="%" enableCountByExample="false" enableDeleteByExample="false" enableUpdateByExample="false" enableSelectByExample="false" selectByExampleQueryId="false" >
      <columnOverride column="???" property="???" />
    </table>
  </context>
  
</generatorConfiguration>